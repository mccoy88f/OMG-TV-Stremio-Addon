version: '3.8'

services:
  omg-tv-stremio-addon:
    image: node:16-slim
    container_name: omg-tv-stremio-addon

    environment:
      - PORT=7860
      - HOST=0.0.0.0
      
    working_dir: /app
    volumes:
      - .:/app # Monta la directory corrente nel container (opzionale, se vuoi lavorare con file locali)
    command: >
      sh -c "
        apt-get update && apt-get install -y git &&
        rm -rf /tmp/repo &&
        git clone --branch main https://github.com/mccoy88f/OMG-TV-Stremio-Addon.git /tmp/repo &&
        cp -r /tmp/repo/* /app/ &&
        mkdir -p /app/data && chown -R node:node /app/data &&
        cd /app &&
        npm install &&
        node index.js
      "
